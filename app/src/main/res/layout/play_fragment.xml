<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/user_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:animateLayoutChanges="true"
        android:orientation="vertical"
        android:visibility="invisible">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:elevation="0dp"
            app:cardCornerRadius="2dp"
            app:cardElevation="2dp">

            <ImageButton
                android:id="@+id/logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:adjustViewBounds="false"
                android:background="@android:drawable/screen_background_light_transparent"
                android:contextClickable="true"
                android:elevation="0dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/account_off" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/profile_pic"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:layout_weight="0"
                    android:adjustViewBounds="true"
                    android:cropToPadding="false"
                    app:srcCompat="@drawable/com_facebook_profile_picture_blank_square" />

                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_weight="1"
                    android:elevation="0dp"
                    android:paddingLeft="6dp"
                    android:paddingTop="16dp"
                    android:text="Name Lastname"
                    android:textAlignment="viewStart"
                    android:textAppearance="@style/TextAppearance.AppCompat" />

            </LinearLayout>

        </android.support.v7.widget.CardView>
    </LinearLayout>

    <HorizontalScrollView
        android:id="@+id/hscroll"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignWithParentIfMissing="false"
        android:elevation="24dp"
        android:fadingEdge="none"
        android:fillViewport="true"
        android:nestedScrollingEnabled="false"
        android:scrollbars="none"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:clipToPadding="false"
            android:theme="@style/Base.CardView"
            app:cardBackgroundColor="?android:attr/panelBackground"
            app:cardCornerRadius="0dp"
            app:cardElevation="0dp"
            app:cardMaxElevation="0dp"
            app:cardPreventCornerOverlap="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/quickgame"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.82"
                    android:background="@drawable/common_google_signin_btn_icon_light_normal_background"
                    android:clickable="false"
                    android:text="Me 3 numra" />

                <Button
                    android:id="@+id/fournumbers"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/common_google_signin_btn_icon_light_normal_background"
                    android:text="Me 4 numra" />

                <Button
                    android:id="@+id/versus"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/common_google_signin_btn_icon_light_normal_background"
                    android:text="Luaj Online" />

            </LinearLayout>
        </android.support.v7.widget.CardView>
    </HorizontalScrollView>

    <Button
        android:id="@+id/button15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/hscroll"
        android:layout_marginLeft="110dp"
        android:layout_marginStart="110dp"
        android:layout_marginTop="73dp"
        android:text="Button"
        android:visibility="gone" />


</RelativeLayout>